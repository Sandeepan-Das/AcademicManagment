<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Subject Page</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      type="text/css"
      href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css"
    />
    <!-- <link
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css"
    /> -->
    <link
      rel="stylesheet"
      type="text/css"
      href="../../stylesheets/subject.css"
    />
    <style>
      .fa:hover {
        color: red;
      }
    </style>
  </head>
  <body style="background-color: #dce1e3">
    <%- include('../partials/header') %>
    <div class="container abcdef">
      <header class="jumbotron" id="hello">
        <div class="container">
          <h1>Welcome to Subjects Page</h1>
          <p>
            You can view all the subjects that you take for the respective year
            and branch
          </p>
          <!-- <p>
            <a class="btn btn-primary btn-large" href="/branch/first"
              >Go Back</a
            >
          </p> -->
        </div>
      </header>

      <div class="row text-center" style="display: flex; flex-wrap: wrap">
        <% subjects.forEach(function(subject){ %>
        <div class="col-md-6 col-sm-12 col-lg-4 col-xl-3">
          <a onclick="fetchShow('<%= subject.subj %>')">
            <figure
              class="figure"
              style="border: 8px solid; border-color: white"
            >
              <img
                class="figure-image img-fluid"
                src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTwwXQu1hZwcBerHRcOGAAGgk0UBmbvMl9fOQ&usqp=CAU"
              />
              <figcaption
                class="figure-caption"
                style="
                  background-color: white;
                  padding-top: 3px;
                  padding-bottom: 1px;
                "
              >
                <h4 style="padding-left: 75px">
                  <%= subject.subj %>
                  <i
                    class="fa fa-trash right"
                    aria-hidden="true"
                    style="
                      padding-left: 60px;
                      padding-top: 3px;
                      padding-bottom: 1px;
                    "
                    onclick="deleteData('<%= subject.subj %>')"
                  ></i>
                </h4>
              </figcaption>
            </figure>
          </a>
        </div>
        <% }); %>
      </div>
    </div>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
    <script src="../scripts/verify.js"></script>
    <script src="../scripts/subj.js"></script>
    <footer style="top: 500px"><p>copyright..</p></footer>

    <%- include ('../partials/footer') %>
  </body>
</html>
