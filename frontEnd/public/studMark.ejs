<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl"
      crossorigin="anonymous"
    />
        <link
      rel="stylesheet"
      type="text/css"
      href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css"
    />
    <title>Marks Page</title>

    <link rel="stylesheet" type="text/css" href="../stylesheets/marks.css" />
  </head>
  <body id="body">
    <script src="https://code.jquery.com/jquery-1.10.2.js"></script>
      <%- include('../partials/header') %>

    <div id="wrapper">
      <h2 style="width: 60%; margin:auto; margin-top:120px"><u>Marks</u></h2>
      <table
        style="margin-top: 10px"
        align="center"
        cellspacing="1"
        cellpadding="1"
        id="mytable"
        border="1"
      >
        <thead>
          <tr>
            <th>Id</th>
            <!-- <th>Name</th> -->
            <th>Quiz</th>
            <th>TA</th>
            <th>Midsem</th>
            <th>Endsem</th>
          </tr>
        </thead>
        <tbody id="tbody">
          <% students.forEach(function(student){ %>
          <tr>
            <td><%= student.roll %></td>
            <!-- <td><%= student.name %></td> -->
            <td id="quiz_row<%= student.no %>"><%= student.quiz %></td>
            <td id="ta_row<%= student.no %>"><%= student.TA %></td>
            <td id="midsem_row<%= student.no %>"><%= student.midSem %></td>
            <td id="endsem_row<%= student.no %>"><%= student.endSem %></td>
          </tr>
          <% }); %>
        </tbody>
      </table>
      <h2 style="width: 60%; margin:auto;margin-top:7px;"><u>Attendance</u></h2>
      <table
        style="margin-top: 10px"
        align="center"
        cellspacing="1"
        cellpadding="1"
        id="mytable"
        border="1"
      >
        <thead>
          <tr>
            <th>Id</th>
            <!-- <th>Name</th> -->
            <th>Days Present</th>
            <th>Total no of classes</th>
            <th>Percentage</th>
          </tr>
        </thead>
        <tbody id="tbody">
          <% students.forEach(function(student){ %>
          <tr class="attd<%= attendance %>">
            <td><%= student.roll %></td>
            <!-- <td><%= student.name %></td> -->
            <td id="days_present_row<%= student.no %>">
              <%= student.present %>
            </td>
            <td id="total_days_row<%= student.no %>"><%= student.total %></td>
            <%if(student.percent){%>
            <td id="pecentage<%= student.no %>"><%= student.percent %></td>
            <% } else { %>
              <td id="pecentage<%= student.no %>">0</td>
            <% } %>
          </tr>
          <% }); %>
        </tbody>
      </table>

      <div class="container" style="margin-top: 40px">
        <%if(msg!=undefined){%>
        <h2><u>Notice</u></h2>
        <p style="background-color: aliceblue;"><b><%= msg %></b></p>
        <%}%>
      </div>
    </div>
    <footer><p>copyright..</p></footer>
    <script src="../scripts/verify.js"></script>
    <script src="../scripts/marks.js"></script>
 <%- include ('../partials/footer') %>
